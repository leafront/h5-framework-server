{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declarationDir": "./src",
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es6", "es7", "dom"]
  },
  "include": ["src"],
  "exclude": ["node_modules",".js",".vue"]
}
